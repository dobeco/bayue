/* components/epsoide/epsoide-cmp.wxss */

.container {
  display: inline-flex;
  flex-direction: row;
  line-height: 60rpx;

}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
   margin-right: 14rpx;
   margin-bottom: 2rpx;
  border-left: 1px solid black;
}

.date-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
 
}

.month {
  font-size: 12px;
  line-height: 12px;
  padding-bottom: 2px;
  margin-right: 2rpx;
  /* padding-right:4rpx; */
}

.year {
  font-size: 10px;
  line-height: 10px;
  padding-bottom: 3px;
}
